            setTimeout(() => {
                introPage.style.animation = 'introFadeOut 1.5s ease forwards';
                
                setTimeout(() => {
                    introPage.style.display = 'none';
                    document.body.style.overflow = 'auto';
                }, 1500);
            }, 5000);
            
            function createBloodDrips() {
                for (let i = 0; i < 15; i++) {
                    const drip = document.createElement('div');
                    drip.classList.add('blood-drip');
                    
                    const left = Math.random() * 100;
                    const delay = Math.random() * 10;
                    const duration = 10 + Math.random() * 10;
                    
                    drip.style.left = `${left}%`;
                    drip.style.animationDelay = `${delay}s`;
                    drip.style.animationDuration = `${duration}s`;
                    
                    bloodDrips.appendChild(drip);
                }
            }
            
            window.addEventListener('scroll', function() {
                const scrollY = window.scrollY;
                const windowHeight = window.innerHeight;
                const documentHeight = document.documentElement.scrollHeight;
                const scrollPercent = (scrollY / (documentHeight - windowHeight)) * 100;
                
                bloodEffect.style.height = `${scrollPercent * 0.8}%`;
                
                const heart = document.querySelector('.heart');
                if (heart) {
                    const scale = 1 + (scrollY / windowHeight) * 0.25;
                    const rotation = 45 + (scrollY / windowHeight) * 8;
                    heart.style.transform = `rotate(${rotation}deg) scale(${scale})`;
                }
            });
            
            langFaBtn.addEventListener('click', function() {
                langFaBtn.classList.add('active');
                langEnBtn.classList.remove('active');
                
                faElements.forEach(el => el.classList.remove('hidden'));
                enElements.forEach(el => el.classList.add('hidden'));
                
                document.documentElement.dir = 'rtl';
                document.documentElement.lang = 'fa';
            });
            
            langEnBtn.addEventListener('click', function() {
                langEnBtn.classList.add('active');
                langFaBtn.classList.remove('active');
                
                enElements.forEach(el => el.classList.remove('hidden'));
                faElements.forEach(el => el.classList.add('hidden'));
                
                document.documentElement.dir = 'ltr';
                document.documentElement.lang = 'en';
            });
            
            document.body.style.overflow = 'hidden';
        });
    </script>
</body>
</html>
